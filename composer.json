{
    "name": "slogsdon/fp-web",
    "description": "test bed for a functional web toolkit",
    "license": "MIT",
    "authors": [
        {
            "name": "Shane Logsdon",
            "email": "shane@shanelogsdon.com"
        }
    ],
    "autoload": {
        "files": [
            "src/Request.php",
            "src/Route.php",
            "src/Util.php"
        ]
    },
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.7"
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8800 -t example",
        "test": "mkdir -p build/coverage-report && php vendor/bin/phpunit -c test/phpunit.xml.dist"
    }
}
